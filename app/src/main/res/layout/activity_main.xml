<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="id.sch.smktelkom_mlg.tugas01.xirpl3030.pawontlogo.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="top|bottom|center_horizontal|right"
        android:src="@drawable/b2" />

    <TextView
        android:id="@+id/textViewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:text="Nama" />

    <EditText
        android:id="@+id/editTextNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewNama" />

    <TextView
        android:id="@+id/textViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextNama"
        android:text="Menu Makanan" />

        <CheckBox
            android:id="@+id/checkBoxNG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewMenu"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textViewMenu"
            android:layout_below="@+id/textViewMenu"
            android:checked="false"
            android:text="Nasi Goreng" />

        <CheckBox
            android:id="@+id/checkBoxAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkBoxNG"
            android:checked="false"
            android:text="Ayam Bakar" />

        <CheckBox
            android:id="@+id/checkBoxOA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkBoxAB"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:text="Opor Ayam" />

        <CheckBox
            android:id="@+id/checkBoxRendang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkBoxAB"
            android:layout_alignLeft="@+id/checkBoxOA"
            android:layout_alignStart="@+id/checkBoxOA"
            android:checked="false"
            android:text="Rendang" />

        <CheckBox
            android:id="@+id/checkBoxRawon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkBoxSA"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:checked="false"
            android:text="Rawon" />

        <CheckBox
            android:id="@+id/checkBoxSA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBoxRawon"
            android:layout_alignStart="@+id/checkBoxRawon"
            android:layout_alignTop="@+id/checkBoxRendang"
            android:checked="false"
            android:text="Soto Ayam" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkBoxSA"
            android:text="Menu Minuman" />

        <CheckBox
            android:id="@+id/checkBoxSinom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:checked="false"
            android:text="Sinom" />

        <CheckBox
            android:id="@+id/checkBoxDS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkBoxWJ"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:text="Dawet Serabi" />

        <CheckBox
            android:id="@+id/checkBoxSaraba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBoxRendang"
            android:layout_alignStart="@+id/checkBoxRendang"
            android:layout_alignTop="@+id/checkBoxSinom"
            android:checked="false"
            android:text="Saraba" />

        <CheckBox
            android:id="@+id/checkBoxRonde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBoxSaraba"
            android:layout_alignStart="@+id/checkBoxSaraba"
            android:layout_alignTop="@+id/checkBoxDS"
            android:checked="false"
            android:text="Ronde" />

        <CheckBox
            android:id="@+id/checkBoxAngsle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBoxSA"
            android:layout_alignStart="@+id/checkBoxSA"
            android:layout_alignTop="@+id/checkBoxSaraba"
            android:checked="false"
            android:text="Angsle" />

        <CheckBox
            android:id="@+id/checkBoxWJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBoxAngsle"
            android:layout_alignStart="@+id/checkBoxAngsle"
            android:layout_below="@+id/checkBoxAngsle"
            android:checked="false"
            android:text="Wedang Jahe" />

        <TextView
            android:id="@+id/textViewHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonOK"
            tools:text="New Text" />

        <TextView
            android:id="@+id/textViewDuduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkBoxDS"
            android:text="No. Tempat Duduk" />

        <Spinner
            android:id="@+id/spinnerDuduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewDuduk"
            android:entries="@array/nomer" />

        <Button
            android:id="@+id/buttonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/spinnerDuduk"
            android:layout_marginTop="40dp"
            android:text="Beli" />

    </LinearLayout>